<Defs>
    <ArchoGacha.PrizeBannerDef Name="GachaTemplate" Abstract="True">
        <spawnCountRange>0~1</spawnCountRange>
        <trashOverrideDefs>
            <li>WoodLog</li>
            <li>Steel</li>
            <li>Silver</li>
            <li>Leather_Plain</li>
        </trashOverrideDefs>
        <minJackpotMarketValue>2000</minJackpotMarketValue>
    </ArchoGacha.PrizeBannerDef>

    <ArchoGacha.PrizeBannerDef ParentName="GachaTemplate">
        <defName>ArchoGacha_WeaponRanged</defName>
        <label>Ranged Weapons Banner</label>
        <prizeBannerClass>ArchoGacha.PrizeBannerClasses.EquipmentPrizeBanner</prizeBannerClass>
        <spawnCountRange>1~1</spawnCountRange>
        <includeCategoryDefs>
            <li>WeaponsRanged</li>
        </includeCategoryDefs>
        <excludedCategoryDefs>
            <li>Grenades</li>
        </excludedCategoryDefs>
        <minTechLevel>Industrial</minTechLevel>
        <selectionWeight>750</selectionWeight>
        <displayPriority>999</displayPriority>
        <valueMultiplier>1.5</valueMultiplier>
    </ArchoGacha.PrizeBannerDef>

    <ArchoGacha.PrizeBannerDef ParentName="GachaTemplate">
